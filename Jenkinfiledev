// hola script //

pipeline {
    agent any

    environment {
        IMAGE_NAME = "firewall-frontend-dev"
        CONTAINER_NAME = "firewall-frontend-dev"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME:latest .'
            }
        }

        stage('Stop Old Container') {
            steps {
                sh '''
                docker stop $CONTAINER_NAME || true
                docker rm $CONTAINER_NAME || true
                '''
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker run -d \
                  --name $CONTAINER_NAME \
                  -p 8082:80 \
                  $IMAGE_NAME:latest
                '''
            }
        }
    }
}
